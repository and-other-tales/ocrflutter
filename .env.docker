# ==============================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env for local docker-compose development

# Database - Docker Compose
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/novel_ocr_admin

# NextAuth - Local Development
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=default-dev-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000
AUTH_SECRET=default-dev-secret-change-in-production

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Admin Password
ADMIN_PASSWORD=admin123

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Cloud Services (Optional for local development)
# Leave empty if not using Google Cloud OCR
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=
GCS_BUCKET_NAME=

# OCR Configuration
PDF_MAX_SIZE_MB=50
OCR_CONFIDENCE_THRESHOLD=70
OCR_MAX_RETRIES=3
OCR_TIMEOUT_SECONDS=55

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_RATE_LIMIT_MAX=10
WORKER_RATE_LIMIT_DURATION=1000

# Malware Scanning (Optional)
ENABLE_MALWARE_SCAN=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

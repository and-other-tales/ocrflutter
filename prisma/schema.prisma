// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

enum OcrStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  LOW_CONFIDENCE
}

enum TextOrientation {
  HORIZONTAL
  VERTICAL_TATEGAKI
  MIXED
  UNKNOWN
}

model Admin {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String
  role      Role      @default(EDITOR)
  createdAt DateTime  @default(now())
  lastLogin DateTime?
  updatedAt DateTime  @updatedAt
}

model Novel {
  id             String       @id @default(cuid())
  title          String
  isbn           String?
  line1          String       // First 3 words (lowercase)
  line2          String       // First 3 words (lowercase)
  line3          String       // First 3 words (lowercase)
  line1Raw       String?      @map("line1_raw") // Full first line for reference
  line2Raw       String?      @map("line2_raw") // Full second line for reference
  line3Raw       String?      @map("line3_raw") // Full third line for reference
  url            String       // Target URL for this novel
  language       String       @default("en") // Language code: en, sv, it, etc.
  chapter        String?      // Optional chapter identifier
  pageNumber     Int?         @map("page_number") // Optional page number
  unlockContent  String?      @map("unlock_content") // Optional content ID to unlock
  metadata       Json?        // Additional flexible metadata
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  createdBy      String?      @map("created_by") // Email or ID of creator

  // Relations
  lookupLogs     LookupLog[]
  manuscript     Manuscript?

  // Indexes for fast lookup
  @@index([line1, line2, line3])
  @@index([language])
  @@index([title])
  @@index([isbn])
}

model LookupLog {
  id              String    @id @default(cuid())
  line1           String    // First 3 words searched
  line2           String    // First 3 words searched
  line3           String    // First 3 words searched
  matchedNovelId  String?   @map("matched_novel_id")
  matchedNovel    Novel?    @relation(fields: [matchedNovelId], references: [id], onDelete: SetNull)
  success         Boolean   // Whether a match was found
  responseTimeMs  Int       @map("response_time_ms") // Response time in milliseconds
  ipAddress       String?   @map("ip_address")
  userAgent       String?   @map("user_agent")
  apiKeyId        String?   @map("api_key_id") // Which API key was used
  timestamp       DateTime  @default(now())

  @@index([timestamp])
  @@index([matchedNovelId])
  @@index([success])
  @@index([apiKeyId])
}

model ApiKey {
  id          String    @id @default(cuid())
  key         String    @unique // The actual API key (hashed or encrypted)
  name        String    // Descriptive name for the key
  userId      String?   @map("user_id") // Optional user ID
  appName     String?   @map("app_name") // Application name
  rateLimit   Int       @default(1000) @map("rate_limit") // Requests per hour
  usageCount  Int       @default(0) @map("usage_count") // Total usage count
  lastUsedAt  DateTime? @map("last_used_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  expiresAt   DateTime? @map("expires_at")
  isActive    Boolean   @default(true) @map("is_active")

  @@index([key])
  @@index([isActive])
}

model Manuscript {
  id                 String            @id @default(cuid())

  // Basic metadata (from upload)
  title              String
  author             String?
  language           String            @default("en")
  orientationHint    TextOrientation?  @map("orientation_hint")

  // File information
  originalFilename   String            @map("original_filename")
  fileSize           Int               @map("file_size") // bytes
  mimeType           String            @map("mime_type")
  pdfStorageUrl      String            @map("pdf_storage_url") // GCS URL
  pdfStoragePath     String            @map("pdf_storage_path") // GCS path for deletion

  // OCR Processing
  ocrStatus          OcrStatus         @default(PENDING) @map("ocr_status")
  ocrJobId           String?           @unique @map("ocr_job_id")
  ocrProcessedAt     DateTime?         @map("ocr_processed_at")
  ocrConfidence      Float?            @map("ocr_confidence") // 0-100
  textOrientation    TextOrientation?  @map("text_orientation") // detected
  ocrErrorMessage    String?           @map("ocr_error_message")
  ocrRetryCount      Int               @default(0) @map("ocr_retry_count")

  // Extracted words (JSONB)
  extractedWords     Json?             @map("extracted_words")
  // Structure: {
  //   line1Words: ["word1", "word2", "word3"],
  //   line2Words: ["word1", "word2", "word3"],
  //   line3Words: ["word1", "word2", "word3"],
  //   rawText: "full text from first page",
  //   confidence: 85.5,
  //   orientation: "HORIZONTAL",
  //   metadata: {
  //     detectedLanguage: "ja",
  //     totalBlocks: 15,
  //     processingTimeMs: 3421
  //   }
  // }

  // Manual corrections
  manuallyEdited     Boolean           @default(false) @map("manually_edited")
  editedBy           String?           @map("edited_by")
  editedAt           DateTime?         @map("edited_at")

  // Relationship to Novel (if converted)
  convertedToNovelId String?           @unique @map("converted_to_novel_id")
  convertedToNovel   Novel?            @relation(fields: [convertedToNovelId], references: [id], onDelete: SetNull)

  // Timestamps and tracking
  createdAt          DateTime          @default(now()) @map("created_at")
  updatedAt          DateTime          @updatedAt @map("updated_at")
  uploadedBy         String            @map("uploaded_by") // Admin email

  // Indexes
  @@index([ocrStatus])
  @@index([uploadedBy])
  @@index([createdAt])
  @@index([language])
  @@index([ocrJobId])
  @@map("manuscripts")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

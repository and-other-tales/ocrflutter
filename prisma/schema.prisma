// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model Admin {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String
  role      Role      @default(EDITOR)
  createdAt DateTime  @default(now())
  lastLogin DateTime?
  updatedAt DateTime  @updatedAt
}

model Novel {
  id             String      @id @default(cuid())
  title          String
  isbn           String?
  line1          String      // First 3 words (lowercase)
  line2          String      // First 3 words (lowercase)
  line3          String      // First 3 words (lowercase)
  line1Raw       String?     @map("line1_raw") // Full first line for reference
  line2Raw       String?     @map("line2_raw") // Full second line for reference
  line3Raw       String?     @map("line3_raw") // Full third line for reference
  url            String      // Target URL for this novel
  language       String      @default("en") // Language code: en, sv, it, etc.
  chapter        String?     // Optional chapter identifier
  pageNumber     Int?        @map("page_number") // Optional page number
  unlockContent  String?     @map("unlock_content") // Optional content ID to unlock
  metadata       Json?       // Additional flexible metadata
  createdAt      DateTime    @default(now()) @map("created_at")
  updatedAt      DateTime    @updatedAt @map("updated_at")
  createdBy      String?     @map("created_by") // Email or ID of creator

  // Relations
  lookupLogs     LookupLog[]

  // Indexes for fast lookup
  @@index([line1, line2, line3])
  @@index([language])
  @@index([title])
  @@index([isbn])
}

model LookupLog {
  id              String    @id @default(cuid())
  line1           String    // First 3 words searched
  line2           String    // First 3 words searched
  line3           String    // First 3 words searched
  matchedNovelId  String?   @map("matched_novel_id")
  matchedNovel    Novel?    @relation(fields: [matchedNovelId], references: [id], onDelete: SetNull)
  success         Boolean   // Whether a match was found
  responseTimeMs  Int       @map("response_time_ms") // Response time in milliseconds
  ipAddress       String?   @map("ip_address")
  userAgent       String?   @map("user_agent")
  apiKeyId        String?   @map("api_key_id") // Which API key was used
  timestamp       DateTime  @default(now())

  @@index([timestamp])
  @@index([matchedNovelId])
  @@index([success])
  @@index([apiKeyId])
}

model ApiKey {
  id          String    @id @default(cuid())
  key         String    @unique // The actual API key (hashed or encrypted)
  name        String    // Descriptive name for the key
  userId      String?   @map("user_id") // Optional user ID
  appName     String?   @map("app_name") // Application name
  rateLimit   Int       @default(1000) @map("rate_limit") // Requests per hour
  usageCount  Int       @default(0) @map("usage_count") // Total usage count
  lastUsedAt  DateTime? @map("last_used_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  expiresAt   DateTime? @map("expires_at")
  isActive    Boolean   @default(true) @map("is_active")

  @@index([key])
  @@index([isActive])
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
